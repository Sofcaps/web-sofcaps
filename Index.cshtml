<!-- Estilos -->
<style>
    /* Estilos para la sección de bienvenida */
    body {
        background-color: #87CEFA !important; /* Color celeste */
        margin: 0;
        padding: 0;
    }
    .welcome-section {
        text-align: center;
        margin-top: 0px;
        font-family: 'Arial', sans-serif;
    }

        .welcome-section h2 {
            font-size: 3rem;
            font-family: 'Roboto', sans-serif;
            font-weight: bold;
            color: #2C3E50;
            text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.3);
            margin-bottom: 20px;
        }

        .welcome-section p {
            font-size: 1.5rem;
            color: #34495E;
            line-height: 1.5;
        }

    #capsCarousel .carousel-inner img {
        max-height: 500px; /* Ajusta la altura máxima */
        max-width: 100%; /* Ajusta la anchura máxima al contenedor */
        object-fit: cover; /* Recorta las imágenes para llenar el área si es necesario */
        margin: 0 auto; /* Centra horizontalmente */
    }

    .icon-link {
        width: 50px; /* Ajusta el tamaño */
        height: 50px; /* Ajusta el tamaño */
        transition: transform 0.3s; /* Animación al pasar el cursor */
    }

        .icon-link:hover {
            transform: scale(1.1); /* Aumenta el tamaño al pasar el cursor */
        }


    /* Estilos para las tarjetas */
    .card img {
        max-height: 200px;
        object-fit: cover;
    }

    .card-title {
        font-size: 1.25rem;
        font-weight: bold;
        color: #2C3E50;
        margin-bottom: 10px;
    }

    .card-text {
        font-size: 1rem;
        color: #16A085;
        margin-bottom: 15px;
    }
</style>
